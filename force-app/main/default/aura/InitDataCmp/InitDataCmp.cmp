<aura:component
        implements="flexipage:availableForRecordHome,force:hasRecordId,force:hasSObjectName"
        description="Configuration for vertical navigation tabs"
        access="global"
>
    <aura:attribute name="backgroundColor" type="String" default="#250056"/>
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <aura:handler
            event="aura:locationChange"
            action="{!c.refreshOnlocationChange}"
    />
    <aura:registerEvent name="appEvent" type="c:InitDataLayoutEvent" />

    <!--One attribute for each middle region in layoutRecordPage. Vertical nav tabs control the visibility of the regions. -->
    <aura:attribute
            name="region1Config"
            type="String"
            access="global"
            description="Region 1 tab configuration"
    />
    <aura:attribute
            name="region2Config"
            type="String"
            access="global"
            description="Region 2 tab configuration"
    />
