            type="String"
            access="global"
            description="Region 20 tab configuration"
    />

    <aura:attribute name="recordId" type="String" />
    <aura:attribute name="helptext" type="String" />
    <lightning:formattedRichText value="{!v.helptext}" />
</aura:component>