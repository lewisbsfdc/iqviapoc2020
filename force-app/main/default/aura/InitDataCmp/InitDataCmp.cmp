            name="region4Config"
            type="String"
            access="global"
            description="Region 4 tab configuration"
    />
    <aura:attribute
            name="region5Config"
            type="String"
            access="global"
            description="Region 5 tab configuration"
    />
    <aura:attribute
            name="region6Config"
            type="String"
            access="global"
            description="Region 6 tab configuration"
    />
    <aura:attribute
            name="region7Config"
            type="String"
            access="global"
            description="Region 7 tab configuration"
    />
    <aura:attribute
            name="region8Config"
            type="String"
            access="global"
            description="Region 8 tab configuration"
    />
    <aura:attribute
            name="region9Config"
            type="String"
            access="global"
            description="Region 9 tab configuration"
    />
    <aura:attribute
            name="region10Config"
            type="String"
            access="global"
            description="Region 10 tab configuration"
    />
    <aura:attribute
            name="region11Config"
            type="String"
            access="global"
